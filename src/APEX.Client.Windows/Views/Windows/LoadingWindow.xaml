<Window x:Class="APEX.Client.Windows.Views.Windows.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:APEX.Client.Windows.Views.Windows" 
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent"
        ResizeMode="NoResize"
        Title="LoadingWindow" Height="450" Width="800">

    <Grid>
        <ui:ProgressRing IsIndeterminate="True" Progress="70" 
                             VerticalAlignment="Center"
                             HorizontalAlignment="Center"/>
    </Grid>

</Window>
